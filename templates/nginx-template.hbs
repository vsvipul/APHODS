server {
    listen 443 ssl;
    server_name {{subdomain}}.iitmandi.co.in;

    location / {
            proxy_pass http://127.0.0.1:{{port}};
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
    }

    ssl_certificate /etc/letsencrypt/live/iitmandi.co.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/iitmandi.co.in/privkey.pem; # managed by Certbot
}
